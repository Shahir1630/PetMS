@model IEnumerable<Pet>

<h2>My Pets</h2>

<nav class="navbar navbar-light bg-light">
    <a class="btn btn-info m-2" asp-action="AddNew"  data-toggle="tooltip"
                data-placement="bottom" title="Add New Pet"><i class="fas fa-plus-circle"></i>Create New</a>
</nav>

<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Age</td>
            <td>Color</td>
            <td>Selling Status</td>
            <td colspan="4">Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var pet in Model)
        {
        <tr>
            <td>@pet.Id</td>
            <td>@pet.Name</td>
            <td>@pet.Age</td>
            <td>@pet.Color</td>
            <td>@(@pet.IsSelling? "Selling":"Not Selling")</td>


            <td>
                <a class="btn btn-info" asp-action="Details" asp-controller="Pet" asp-route-Id="@pet.Id"><i class="fas fa-info-circle"></i></a>
                <a class="btn btn-warning ml-2" asp-action="Edit" asp-route-Id="@pet.Id"><i class="fas fa-edit"></i></a>
                @*<a class="btn btn-danger ml-3" asp-action="Delete" asp-route-Id="@pet.Id" onclick="return confirm('Are You Sure To Delete This Pet');">*@
                <a class="btn btn-danger ml-2 delete" data-id="@pet.Id" data-controller="Pet" data-action="Delete" data-body-message="Are You Sure To Delete This Pet?">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>

</table>